var resizeCanvas = function() {
    var _setSize = function(w,h) {
	console.log( 'setSize');
	ctx.canvas.width  = w;
	ctx.canvas.height = h;
	
	$canvas[0].width  = w;
	$canvas[0].height  = h;
	
	canvasSize.width = w;
	canvasSize.height = h;
    };
    if( config.fullSize ) _setSize( window.innerWidth, window.innerHeight );
    else                  _setSize( DEFAULT_CANVAS_WIDTH, DEFAULT_CANVAS_HEIGHT );
};
$( window ).resize( resizeCanvas );
